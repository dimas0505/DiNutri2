    bgColor: "bg-orange-50 hover:bg-orange-100",
    selectedBg: "bg-orange-100 border-orange-500",
  },
  {
    value: "neutral" as MoodType,
    emoji: "üòê",
    label: "Neutro",
    color: "text-gray-500",
    bgColor: "bg-gray-50 hover:bg-gray-100",
    selectedBg: "bg-gray-100 border-gray-500",
  },
