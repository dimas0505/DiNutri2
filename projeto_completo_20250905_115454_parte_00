    emoji: "üòÅ",
    label: "Muito feliz",
    color: "text-blue-500",
    bgColor: "bg-blue-50 hover:bg-blue-100",
    selectedBg: "bg-blue-100 border-blue-500",
  },
];

export function MoodSelector({
  title,
  selectedMood,
  onMoodChange,
  notes,
  onNotesChange,
  showNotes = false,
}: MoodSelectorProps) {
  return (
    <Card>
      <CardHeader>
        <CardTitle className="text-lg">{title}</CardTitle>
      </CardHeader>
